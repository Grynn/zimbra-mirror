PID=""
PIDFILE="/opt/zimbra/openldap/var/run/slapd.pid"

mkdir -p "/opt/zimbra/openldap/var/run/"

source /opt/zimbra/bin/zmshutil || exit 1
zmsetvars \
  ldap_is_master \
  ldap_url \
  ldap_master_url \
  ldap_replica_rid 

if [ x"$ldap_replica_rid" = "x" ]; then
  ldap_replica_rid=100
fi

if [ x$ldap_is_master = "xfalse" ]; then
	COOKIE="-c rid=$ldap_replica_rid"

  if [ "x$ldap_url" = "x$ldap_master_url" ]; then
    echo "ldap_url and ldap_master_url cannot be the same on an ldap replica"
    exit 1
  fi
fi

getpid()
{
	if [ -f $PIDFILE ]; then
		PID=`cat $PIDFILE`
	fi
}

checkrunning()
{
	getpid
	if [ "x$PID" = "x" ]; then
		RUNNING=0
	else
		kill -0 $PID
		if [ $? != 0 ]; then
			PID=""
			RUNNING=0
		else
			RUNNING=1
		fi
	fi
}

doDebugStart() {
  TIMEOUT=60 # timelimit for command
	sudo /opt/zimbra/libexec/zmslapd -l LOCAL0 -4 -u zimbra -h "$my_url" \
			-f /opt/zimbra/conf/slapd.conf -d 1 2>&1 | egrep "failed|error" &
  cmd_pid=$!
  sleep $TIMEOUT | (
    read nothing # wait on sleep to finish
    kill $cmd_pid 2>/dev/null; # otherwise abort the command!
  ) &
  sleep_pid=$!
  wait $cmd_pid
  kill -ALRM $sleep_pid 2>/dev/null # kill sleep if still running
	echo ""
	exit 1
}


start()
{
   checkrunning
   if [ $RUNNING = 0 ]; then
     if [ ! -f /opt/zimbra/openldap-data/DB_CONFIG -o ! -s /opt/zimbra/openldap-data/DB_CONFIG ]; then
       if [ -f /opt/zimbra/openldap/var/openldap-data/DB_CONFIG.custom ]; then
         cp -f /opt/zimbra/openldap/var/openldap-data/DB_CONFIG.custom /opt/zimbra/openldap-data/DB_CONFIG
       else
         cp -f /opt/zimbra/openldap/var/openldap-data/DB_CONFIG /opt/zimbra/openldap-data/DB_CONFIG
       fi
     fi 
     if [ x$ldap_is_master = "xtrue" ]; then
       if [ -d /opt/zimbra/openldap-data/accesslog/db ]; then
         if [ ! -f /opt/zimbra/openldap-data/accesslog/db/DB_CONFIG -o ! -s /opt/zimbra/openldap-data/accesslog/db/DB_CONFIG ]; then
           if [ -f /opt/zimbra/openldap/var/openldap-data/DB_CONFIG.accesslog.custom ]; then
             cp -f /opt/zimbra/openldap/var/openldap-data/DB_CONFIG.accesslog.custom /opt/zimbra/openldap-data/accesslog/db/DB_CONFIG
           else
             cp -f /opt/zimbra/openldap/var/openldap-data/DB_CONFIG.accesslog /opt/zimbra/openldap-data/accesslog/db/DB_CONFIG
           fi
         fi
       fi
     fi
		# Run db_recover on startup, in case of power failure. Removed for ldap 2.3
		# Our ldap url should be the first in the list in localconfig
		my_url=`echo ${ldap_url} | awk '{print $1}'`
		/opt/zimbra/libexec/zmconfigure /opt/zimbra/conf/slapd.conf.in /opt/zimbra/conf/slapd.conf
		sudo /opt/zimbra/libexec/zmslapd -l LOCAL0 -4 \
      -u zimbra -h "$my_url" -f /opt/zimbra/conf/slapd.conf
    sleep 5
    for ((i =0; i < 6; i++)); do
      checkrunning
      if [ $RUNNING = 0 ]; then
		    sudo /opt/zimbra/libexec/zmslapd -l LOCAL0 -4 \
          -u zimbra -h "$my_url" -f /opt/zimbra/conf/slapd.conf
      else 
        break
      fi
      sleep 5
    done
		if [ "x$PID" = "x" ]; then
      echo "Failed to start slapd.  Attempting debug start to determine error."
      doDebugStart
		else
			echo "Started slapd: pid $PID"
		fi
	else
		echo "slapd already running: pid $PID"
		exit 1
	fi
}

stop()
{
	checkrunning
  
	if [ $RUNNING = 0 ]; then
		echo "slapd not running"
		exit 0
	else
    echo -n "Killing slapd with pid $PID"
		kill -TERM $PID
    for ((i =0; i < 300; i++)); do
      sleep 5
      kill -0 $PID 2> /dev/null
      if [ $? != 0 ]; then
        echo " done."
        exit 0
      fi
      echo -n "."
    done
    kill -TERM $PID
    if [ $? = 0 ]; then
      echo " gave up waiting!"
      exit 1
    else 
      echo " done."
    fi
	fi
  exit 0
}

status()
{
	checkrunning
	if [ $RUNNING = 0 ]; then
		exit 1
	else
		echo "slapd running pid: $PID"
		exit 0
	fi
}

case "$1" in 
	start)
		start
		;;
	stop)
		stop
		;;
	status)
		status
		;;
	*)
		echo "Usage: $0 start|stop|status"
		exit 1
		;;
esac
