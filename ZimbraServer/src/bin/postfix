progdir=`dirname $0`

source `dirname $0`/zmshutil || exit 1
zmsetvars \
	zimbra_home \
	zimbra_server_hostname 

platform=`/opt/zimbra/libexec/get_plat_tag.sh`

rewriteconfig() {
    /opt/zimbra/libexec/zmmtainit
    /opt/zimbra/libexec/zmmtaconfig mta > /dev/null 2>&1
}

if [ "x$1" = "xstatus" -o "x$1" = "xstart" ]; then
  sudo ${zimbra_home}/libexec/zmmtastatus 2> /dev/null
	R=$?
	if [ "x$1" = "xstart" ]; then
		if [ "x$R" = "x0" ]; then
			exit 0
		fi
	else
		if [ x$R != "x0" ]; then
			exit 1
		else
			exit 0
		fi
	fi
fi

if [ "x$1" = "xstart" -o "x$1" = "xreload" ]; then
	if [ x$2 = "x" ]; then
		rewriteconfig
	fi
  postfix_header_checks=${zimbra_home}/conf/postfix_header_checks
  TEMPFILE=`mktemp ${postfix_header_checks}.XXXXXX` && cp -f ${postfix_header_checks} ${TEMPFILE}
  if [ $? = 0 -a -s "$TEMPFILE" ]; then
	  ${zimbra_home}/postfix/sbin/postmap ${TEMPFILE} && mv -f ${TEMPFILE}.db ${postfix_header_checks}.db
    rm -f ${TEMPFILE}
  fi
    
fi

if [ -f /etc/aliases ]; then
  sudo ${zimbra_home}/postfix/sbin/postalias /etc/aliases
fi

sudo ${zimbra_home}/postfix/sbin/postfix "$@"

