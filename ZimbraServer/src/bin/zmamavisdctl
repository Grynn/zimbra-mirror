if [ x`whoami` != xzimbra ]; then
    echo Error: must be run as zimbra user
	exit 1
fi

source `dirname $0`/zmshutil || exit 1
zmsetvars \
    zimbra_home \
    zimbra_log_directory

platform=`/opt/zimbra/bin/get_plat_tag.sh`

rewriteconfig() {
	/opt/zimbra/libexec/zmmtaconfig antispam > /dev/null 2>&1
}

checkRunning() {
	if [ -f /opt/zimbra/log/amavisd.pid ]; then
		cpid=`cat /opt/zimbra/log/amavisd.pid`
		kill -0 "$cpid" 2> /dev/null
		if [ $? = 0 ]; then
			exit 0;
		fi
	fi
}

#
# Main
#
case "$1" in
    'start')
		checkRunning
		if [ "x$platform" != "xMACOSX" -a "x$platform" != "xMACOSXx86" ]; then
			mount -t tmpfs | grep ${zimbra_home}/amavisd-new-2.3.3/tmp > /dev/null 2>&1
			if [ $? != 0 ]; then
				mount ${zimbra_home}/amavisd-new-2.3.3/tmp
			fi
		fi
		if [ x$2 = "x" ]; then
			rewriteconfig
		fi
		if [ ! -f ${zimbra_home}/amavisd/.spamassassin/bayes_toks ]; then
			# Initial bayes seeding.
			cp -f ${zimbra_home}/amavisd/.spamassassin/init/* \
				${zimbra_home}/amavisd/.spamassassin
			chmod 644 ${zimbra_home}/amavisd/.spamassassin/bayes*
		fi
		${zimbra_home}/amavisd/sbin/amavisd -c \
			${zimbra_home}/conf/amavisd.conf &
        ;;

    'kill')
		cpid=`cat /opt/zimbra/log/amavisd.pid`
        kill -TERM "$cpid" 2> /dev/null
		sleep 2
		umount ${zimbra_home}/amavisd-new-2.3.3/tmp
        ;;

    'stop')
		if [ -f /opt/zimbra/log/amavisd.pid ]; then
			cpid=`cat /opt/zimbra/log/amavisd.pid`
			kill -TERM "$cpid" 2> /dev/null
			if [ -f /opt/zimbra/log/amavisd.pid ]; then
				if [ "x$platform" = "xMACOSX" -o "x$platform" = "xMACOSXx86" ]; then
					killall -TERM amavisd > /dev/null 2>&1
				else
					killall -TERM ${zimbra_home}/amavisd/sbin/amavisd > /dev/null 2>&1
				fi
			fi
			sleep 2
			umount ${zimbra_home}/amavisd-new-2.3.3/tmp
		else
			if [ "x$platform" = "xMACOSX" -o "x$platform" = "xMACOSXx86" ]; then
				killall -TERM amavisd > /dev/null 2>&1
			else
				killall -TERM ${zimbra_home}/amavisd/sbin/amavisd > /dev/null 2>&1
			fi
		fi
		exit 0
        ;;
    
    'restart')
        $0 stop
        $0 start
        ;;
	
	'status')
		cpid=`cat /opt/zimbra/log/amavisd.pid`
        kill -0 "$cpid" 2> /dev/null
		exit $?
		;;
    
    *)
        echo "Usage: $0 start|stop|kill|restart|status"
        exit 1
        ;;
esac
