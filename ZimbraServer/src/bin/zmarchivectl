BASE=/opt/zimbra
SCRIPTS="zmmtaconfigctl zmamavisdctl"

source /opt/zimbra/.bashrc

case "$1" in 
	start)
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i start $2
		done
	;;
	stop)
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i stop
		done
	;;
	reload)
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i restart
		done
	;;
	status)
		STATUS=0
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i status
			R=$?
			if [ $R -ne "0" ]; then
				echo "$i is not running"
				STATUS=$R
			fi
		done
		exit $STATUS
	;;
	*)
		echo "$0 start|stop|reload|status"
		exit 1
	;;
esac
