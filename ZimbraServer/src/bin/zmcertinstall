if [ x`whoami` != "xzimbra" ]; then
  echo "$0 must be run as user zimbra"
  exit 1
fi

platform=`/opt/zimbra/libexec/get_plat_tag.sh 2> /dev/null` || "unknown"
source `dirname $0`/zmshutil || exit 1
zmsetvars \
  zimbra_home \
  zimbra_log_directory \
  zimbra_tmp_directory \
  zimbra_java_home \
  mailboxd_directory \
  mailboxd_keystore \
  mailboxd_keystore_password \
  mailboxd_server \
  postfix_smtpd_tls_cert_file \
  postfix_smtpd_tls_key_file



zimbra_ssl_directory=${zimbra_home}/ssl/ssl
export JAVA_HOME=$zimbra_java_home
zimbra_conf_directory=${zimbra_home}/conf

usage() {
  echo "$0 ldap <certfile> <keyfile>"
  echo "$0 mta <certfile> <keyfile>"
  echo "$0 mailbox [<certfile>]"
  echo "$0 proxy <certfile> <keyfile>"
  echo "  Default <certfile> is ${zimbra_ssl_directory}/server/mailboxd.crt"
}

case "$1" in
  mta|mailbox|proxy|ldap)
    APP=$1
    zimbra_tls_certfile=$2
    zimbra_tls_keysfile=$3
    ;;
  help|-help|--help)
    usage
    exit 0
  ;;
  *)
    usage
    exit 1
  ;;
esac

# ldap requires 2 args
if [ x"$APP" = "xldap" ] && [ x"${zimbra_tls_certfile}" = "x" -o x"${zimbra_tls_keysfile}" = "x" ]; then
  usage
  exit 1
fi

# mta requires 2 args
if [ x"$APP" = "xmta" ] && [ x"${zimbra_tls_certfile}" = "x" -o x"${zimbra_tls_keysfile}" = "x" ]; then
  usage
  exit 1
fi

# proxy requires 2 args
if [ x"$APP" = "xproxy" ] && [ x"${zimbra_tls_certfile}" = "x" -o x"${zimbra_tls_keysfile}" = "x" ]; then
  usage
  exit 1
fi

if [ "x${zimbra_tls_certfile}" = "x" ]; then
	zimbra_tls_certfile=${zimbra_ssl_directory}/server/mailboxd.crt
fi

if [ ! -f "${zimbra_tls_certfile}" ]; then
	echo "ERROR - ${zimbra_tls_certfile} not found!"
	exit 1
fi

mkdir -p ${zimbra_ssl_directory}/server
mkdir -p ${zimbra_ssl_directory}/cert
mkdir -p ${zimbra_ssl_directory}/ca


getHostInfo() {

	if [ "x$platform" = "xMACOSX" -o "x$platform" = "xMACOSXx86" ]; then
		HH=`hostname`
		return
	else
		H=`hostname --fqdn`
	fi
	HH=`echo $H | grep '\.'`

	if [ "x$HH" = "x" ]; then
		echo "Error - fully qualified host name not found - please correct"
		exit
	fi

}

importCert() {

	echo "** Importing server cert"
	echo

	if [ $APP = "mailbox" ]; then
		keytool -import -alias ${mailboxd_server} -keystore ${mailboxd_keystore} \
			-trustcacerts -file ${zimbra_tls_certfile} -storepass ${mailboxd_keystore_password}
	elif [ $APP = "mta" ]; then
          cp -f ${zimbra_tls_certfile} ${postfix_smtpd_tls_cert_file}
          cp -f ${zimbra_tls_keysfile} ${postfix_smtpd_tls_key_file}
        elif [ $APP = "ldap" ]; then
          cp -f ${zimbra_tls_certfile} "/opt/zimbra/conf/slapd.crt"
          cp -f ${zimbra_tls_keysfile} "/opt/zimbra/conf/slapd.key"
        elif [ $APP = "proxy" ]; then
          cp -f ${zimbra_tls_certfile} "/opt/zimbra/conf/nginx.crt"
          cp -f ${zimbra_tls_keysfile} "/opt/zimbra/conf/nginx.key"
        else
          echo "ERROR: Unknown application $APP"
          exit
	fi

}

getHostInfo

importCert
