source `dirname $0`/zmshutil || exit 1
zmsetvars \
    zimbra_home \
    zimbra_log_directory

libjars=${zimbra_home}/lib/jars
configfile=${zimbra_home}/conf/localconfig.xml
pidfile=${zimbra_log_directory}/milter.pid
pid=""

if [ -x "${zimbra_home}/java/bin/java" ]; then
    java="${zimbra_home}/java/bin/java"
else
    java=java
fi

case "`uname`" in
CYGWIN*) PATHSEP=";";;
*) PATHSEP=":";;
esac

CP=${libjars}/zimbracommon.jar${PATHSEP}\
${libjars}/zimbrastore.jar${PATHSEP}\
${libjars}/mail.jar${PATHSEP}\
${libjars}/mina-core-1.1.7-zimbra.jar${PATHSEP}\
${libjars}/slf4j-api-1.5.8.jar${PATHSEP}\
${libjars}/slf4j-log4j12-1.5.8.jar${PATHSEP}\
${libjars}/dom4j-1.5.2.jar${PATHSEP}\
${libjars}/log4j-1.2.15.jar${PATHSEP}\
${libjars}/guava-r06.jar${PATHSEP}\
${libjars}/commons-codec-1.4.jar${PATHSEP}\
${libjars}/commons-logging.jar${PATHSEP}\
${libjars}/commons-cli-1.2.jar${PATHSEP}\
${libjars}/commons-httpclient-3.0.jar${PATHSEP}\
${zimbra_home}/conf

java_version=$(${java} -version 2>&1 | grep "java version" | sed -e 's/"//g' | awk '{print $NF}' | awk -F_ '{print $1}')
if [ x"$java_version" = "x1.6.0" ]; then
  java_options="-XX:ErrorFile=${ZMROOT}/log"
else
  java_options=""
fi

runcmd="${java} ${java_options} -Dzimbra.home=\"${zimbra_home}\" -Dzimbra.config=\"${configfile}\" -cp \"$CP\" \
   com.zimbra.cs.milter.MinaMilterServer" 

getpid()
{
  if [ -f ${pidfile} ]; then
    pid=$(cat ${pidfile})
  fi
}

checkrunning()
{
  getpid
  if [ "x$pid" = "x" ]; then
    running=0
  else
    kill -0 $pid 2> /dev/null
    if [ $? != 0 ]; then
      pid=""
      running=0
    else
      running=1
    fi
  fi
}

case "$1" in 
  start)
    checkrunning
    echo -n "Starting milter server..."
    if [ $running = 1 ]; then
      echo "milter server is already running."
      exit 0
    fi

    nohup sh -c "exec ${runcmd} 2>&1" >/dev/null &

    pid=$!
    if [ "x$pid" != 'x' ]; then
      echo $pid > $pidfile
    else
      echo "failed."
      exit 1
    fi
    checkrunning
    if [ $running = 1 ]; then
      echo "done."
      exit 0
    else
      echo "failed."
      exit 1
    fi
  ;;
  stop)
    checkrunning
    echo -n "Stopping milter server..."
    if [ $running = 0 ]; then
      echo "milter server is not running."
      exit 0
    else
      for ((i = 0; i < 30; i++)); do
        kill -0 $pid 2> /dev/null
        if [ $? != 0 ]; then
          rm -rf ${pidfile}
          break
        fi
        kill $pid
        sleep 1
      done
    fi
    if [ -s ${pidfile} ]; then
      echo "failed."
      exit 1
    else
      echo "done."
    fi
    exit 0
  ;;
  restart)
    $0 stop
    $0 start
  ;;
  status)
    echo -n "Milter server is "
    checkrunning
    if [ $running = 0 ]; then
      echo "not running."
      exit 1
    else
      echo "running."
      exit 0
    fi
  ;;
  *)
    echo "$0 start|stop|restart|status"
    exit 1
  ;;
esac
