if [ x`whoami` != xzimbra ]; then
    echo Error: must be run as zimbra user
	exit 1
fi

source `dirname $0`/zmshutil || exit 1
zmsetvars \
    zimbra_home \
    zimbra_log_directory

#
# Main
#
case "$1" in
    'start')
		${zimbra_home}/libexec/zmmtaconfig </dev/null  \
		    >> ${zimbra_log_directory}/zmmtaconfig.log 2>&1 
        ;;

    'kill')
		if [ -f "/opt/zimbra/log/zmmtaconfig.pid" ]; then
			cpid=`cat /opt/zimbra/log/zmmtaconfig.pid`
			kill -TERM "$cpid" 2> /dev/null
			rm -f /opt/zimbra/log/zmmtaconfig.pid
		fi
		exit 0
        ;;

    'stop')
		if [ -f "/opt/zimbra/log/zmmtaconfig.pid" ]; then
			cpid=`cat /opt/zimbra/log/zmmtaconfig.pid`
			kill -TERM "$cpid" 2> /dev/null
			rm -f /opt/zimbra/log/zmmtaconfig.pid
		fi
		exit 0
        ;;
    
    'restart'|'reload')
        $0 stop
        $0 start
        ;;
	
    'status')
		if [ -f "/opt/zimbra/log/zmmtaconfig.pid" ]; then
			cpid=`cat /opt/zimbra/log/zmmtaconfig.pid`
			kill -0 "$cpid" 2> /dev/null
			exit $?
		fi
		exit 1
    ;;
    
    *)
        echo "Usage: $0 start|stop|kill|restart|status"
        exit 1
        ;;
esac
