use strict;

use lib "/opt/zimbra/zimbramon/lib/Zimbra/Mon";
use lib "/opt/zimbra/zimbramon/lib";

use Zimbra::Mon::Logger;

my $platform=`/opt/zimbra/bin/get_plat_tag.sh`;
chomp $platform;

my $MNTCMD;
my $DFCMD;
if ($platform eq "MACOSX") {
	$MNTCMD = "mount -t hfs";
	$DFCMD = "df -ml ";
} else {
	$MNTCMD = "mount -t ext3";
	$DFCMD = "df -ml ";
}

logStatus();

logDiskUsage();

exit 0;

sub logStatus {
	my @status = ();
	open STATUS, "/opt/zimbra/bin/zmcontrol status |" or die "Can't get status: $!";
	@status = <STATUS>;
	close STATUS;
	foreach my $s (@status) {
		($s =~ /^Host/) && next;
		my ($service, $stat) = split ' ', $s;
		Zimbra::Mon::Logger::Log( "info", "STATUS: $service: $stat" );
	}
}

sub logDiskUsage {
	my @mounts = ();
	open MOUNTS, "$MNTCMD |" or die "Can't open $MNTCMD: $!";
	@mounts = <MOUNTS>;
	close MOUNTS;
	foreach my $m (@mounts) {
		my ($dev,undef,$mp) = split ' ',$m;
		open DF, "$DFCMD $dev | tail -1 |" or die "Can't open $DFCMD: $!";
		my @df = <DF>;
		close DF;
		my (undef, $total, undef, $avail) = split ' ', $df[0];
		Zimbra::Mon::Logger::Log( "info", "DISK: dev: $dev, mp: $mp, tot: $total, avail: $avail" );
	}
}
