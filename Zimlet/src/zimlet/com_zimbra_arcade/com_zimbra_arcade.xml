<zimlet name="com_zimbra_arcade" version="1.0" description="Arcade Games">
	<include>arcade.js</include>
	<includeCSS>arcade.css</includeCSS>
	<resource>arcade-icon.gif</resource>
	<resource>asteroids-icon.gif</resource>
	<resource>frogger-icon.gif</resource>
	<resource>hexxagon-icon.gif</resource>
	<resource>invaders-icon.gif</resource>
	<resource>simon-icon.gif</resource>
	<resource>snake-icon.gif</resource>
	<resource>tetris-icon.gif</resource>
	<resource>tictactoe-icon.gif</resource>
	<resource>asteroids.swf</resource>
	<resource>frogger.swf</resource>
	<resource>hexxagon.swf</resource>
	<resource>invaders.swf</resource>
	<resource>simon.swf</resource>
	<resource>snake.swf</resource>
	<resource>tetris.swf</resource>
	<resource>tictactoe.swf</resource>
	<handlerObject>Com_Zimbra_Arcade</handlerObject>

	<zimletPanelItem label="Arcade Games" icon="Arcade-panelIcon">
		<toolTipText>Right-click to select a game to play</toolTipText>
		<contextMenu>
			<menuItem label="Asteroids" id="asteroids" icon="Asteroids-panelIcon">
				<canvas type="dialog" width="465" height="360" title="Asteroids" />
				<actionJavaScript />
			</menuItem>
			<menuItem label="Frogger" id="frogger" icon="Frogger-panelIcon">
				<canvas type="dialog" width="465" height="360" title="Frogger" />
				<actionJavaScript />
			</menuItem>
			<menuItem label="Hexxagon" id="hexxagon" icon="Hexxagon-panelIcon">
				<canvas type="dialog" width="465" height="360" title="Hexxagon" />
				<actionJavaScript />
			</menuItem>
			<menuItem label="Space Invaders" id="invaders" icon="Invaders-panelIcon">
				<canvas type="dialog" width="465" height="360" title="Space Invaders" />
				<actionJavaScript />
			</menuItem>
			<menuItem label="Simon Says" id="simon" icon="Simon-panelIcon">
				<canvas type="dialog" width="465" height="360" title="Simon Says" />
				<actionJavaScript />
			</menuItem>
			<menuItem label="Snake" id="snake" icon="Snake-panelIcon">
				<canvas type="dialog" width="465" height="360" title="Snake" />
				<actionJavaScript />
			</menuItem>
			<menuItem label="Tetris" id="tetris" icon="Tetris-panelIcon">
				<canvas type="dialog" width="465" height="360" title="Tetris" />
				<actionJavaScript />
			</menuItem>
			<menuItem label="Tic Tac Toe" id="tictactoe" icon="Tictactoe-panelIcon">
				<canvas type="dialog" width="465" height="360" title="Tic Tac Toe" />
				<actionJavaScript />
			</menuItem>
		</contextMenu>
	</zimletPanelItem>
</zimlet>
