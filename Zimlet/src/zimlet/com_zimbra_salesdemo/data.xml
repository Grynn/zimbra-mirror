<items>
    <!-- Add an item (matches "SEM_12345_31122011") -->
    <item>
        <!-- [Required] Tooltip to be displayed-->
        <tooltip>
            <!-- [Required] match the below text in email body -->
            <textToMatch>SEM_12345_31122011</textToMatch>
            <!-- TemplateId(<zimletName>/templates/Sales.template) contains html to be displayed in tooltip -->
            <tooltipTemplateId>TEMPLATE_FOR_SAP_SEM_ITEM_TOOLTIP</tooltipTemplateId>

            <!-- When the user right-clicks.. show this context menu-->
            <contextMenu>
                <!--A single context menu item -->
                <contextMenuItem>
                    <!-- menu item name -->
                    <name>Display Data</name>
                    <!-- menu item's icon [this is the CSS name described in Sales.css] -->
                    <icon>SAP_Icon</icon>
                </contextMenuItem>
                <!--A single context menu item -->
                <contextMenuItem>
                    <!-- menu item name -->
                    <name>Change Threshold</name>
                    <!-- menu item's icon [this is the CSS name described in Sales.css] -->
                    <icon>SAP_Icon</icon>
                </contextMenuItem>
                <!--A single context menu item -->
